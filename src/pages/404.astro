---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import { Image } from 'astro:assets'
import img from '../assets/img/3d-404.png'
---

<DefaultLayout title="404">
  <section class="my-12">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start py-8 max-h-[400px]">
        <div class="flex flex-col items-start justify-start lg:col-span-2">
          <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl font-semibold text-foreground leading-tight mb-4">Are you lost?</h1>
          <p class="text-2xl mb-4">This page does not exist. Don't worry though, we got you.</p>
          <p class="text-lg text-foreground/80 leading-relaxed max-w-lg mb-4">
            <a 
              class="text-action-color underline hover:text-action-color-state transition-colors duration-200" 
              href="/"
            >
              Let's get you home!
            </a>
          </p>
        </div>
        <div class="lg:col-span-1">
          <Image 
            src={img} 
            alt="404 illustration" 
            class="max-h-[400px] hidden lg:block"
          />
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>
