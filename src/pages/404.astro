---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import { Image } from 'astro:assets'
import img from '../assets/img/chinchilla.png'
---

<DefaultLayout title="404">
  <section class="container max-w-6xl mx-auto px-6 md:px-12 py-16">
    <div class="space-y-8">
      <h1 class="font-serif text-4xl md:text-5xl lg:text-6xl font-semibold text-foreground leading-tight">Are you lost?</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 my-12 items-start">
        <div class="space-y-6">
          <p class="text-lg text-foreground/80 leading-relaxed">This page does not exist. Don't worry though, we got you.</p>
          <p class="text-lg text-foreground/80 leading-relaxed">
            <a href="/">Let's get you home!</a>
          </p>
        </div>
        <div class="relative flex justify-center">
          <div class="relative">
            <div class="absolute inset-0 bg-gradient-to-br from-coral/20 to-honey/20 rounded-3xl blur-2xl transform rotate-6" />
            <Image 
              src={img} 
              alt="404 illustration" 
              class="relative w-full max-w-md rounded-3xl shadow-lifted animate-float"
              decoding="async"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>
